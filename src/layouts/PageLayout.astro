---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
interface Props {
  title: string;
}

const { title } = Astro.props as Props;

const description = "";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Enabling society to cultivate a sense of social responsibility to bring
        about a gender just society."
    />
    <meta name="viewport" content="width=device-width" />

    <title>{title} | Sakhya - Women's Guidance Cell</title>
    <meta name="description" content={description} />
    <meta
      property="og:title"
      content={title + " | Sakhya - Women's Guidance Cell"}
    />
    <meta property="og:description" content={description} />
    <meta name="robots" content="index,follow" />
    <meta
      name="keywords"
      content="Sakhya, NGO, Women, Female, Women Empowerment, Guidance, Cell, Help, Support, Society, Social, Responsibility, Advocacy, Networking and Advocacy, Groups and Communities, Counselling and Legal Assistance, Trainings, Workshops, Seminars, Awareness, Campaigns, Research and Documentation"
    />

    <link rel="sitemap" href="/sitemap.xml" />

    <!-- Favicons -->
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5" />
    <meta name="msapplication-TileColor" content="#da532c" />
    <meta name="theme-color" content="#ffffff" />
  </head>
  <body>
    <Navbar />
    <slot />
    <Footer />
  </body>
</html>

<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap");
  html {
    font-family: "Poppins", sans-serif;
    @apply bg-col-1-light;
  }
</style>
