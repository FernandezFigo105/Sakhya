---
interface Props {
    imgSrc: string;
    month?: string;
    year: string;
    src: string;
}

const { imgSrc, month, year, src } = Astro.props as Props;
---

<a href={src} target="_blank">
    <div class="relative mb-3">
        <div class="overlay">
            <!-- arrow circle down -->
            <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="currentColor"
                class="w-12 h-12"
            >
                <path
                    fill-rule="evenodd"
                    d="M12 2.25c-5.385 0-9.75 4.365-9.75 9.75s4.365 9.75 9.75 9.75 9.75-4.365 9.75-9.75S17.385 2.25 12 2.25Zm-.53 14.03a.75.75 0 0 0 1.06 0l3-3a.75.75 0 1 0-1.06-1.06l-1.72 1.72V8.25a.75.75 0 0 0-1.5 0v5.69l-1.72-1.72a.75.75 0 0 0-1.06 1.06l3 3Z"
                    clip-rule="evenodd"></path>
            </svg>
        </div>
        <img class="w-full" src={imgSrc} alt={`${month}-${year}`} />
    </div>
    <p class="text-center">
        {month ? month : "Annual Report"}
        <span class="text-col-3">{year}</span>
    </p>
</a>

<style>
    .overlay {
        position: absolute;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        height: 100%;
        width: 100%;
        opacity: 0;
        transition: 0.5s ease;
        background-color: #000;
    }
    .overlay svg {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        color: white;
    }
    .overlay:hover {
        opacity: 0.7;
    }
</style>
